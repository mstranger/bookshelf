<h2 class="mb-4">New user</h2>

<div class="row">
  <div class="col-sm-8">
    <% unless params.valid? %>
      <div class="errors alert-danger mb-2">
        <p class="errors-title">There was a problem with your submission</p>
        <ul class="no-list">
          <% params.error_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%=
      form_for :user, routes.users_path do
        div class: 'input form-group' do
          label      :email
          text_field :email, class: 'form-control'
        end

        div class: 'controls text-center' do
          submit 'Create User', class: 'btn btn-primary mt-2'
        end
      end
    %>

    <hr>
    <%= link_to 'Back to users', routes.users_path %>
  </div>
</div>
